.articulos
  height: 400px
  padding: 0 15px
  width: 100%

.grid
  max-width: 100%

/* clearfix */
.grid:after
  clear: both
  content: ''
  display: block


/* ---- grid-item ---- */

.grid-sizer,
.grid-item
  background: $color-primary
  width: 20%

.grid-item
  float: left
  height: 200px
  border-bottom: 7px solid $color-primary
  color: #333

.grid-item--height2
  color: $color-primary
  height: 300px

.grid-item--height3
  color: $color-primary
  height: 380px

.grid-item-img
  width: 100%
  height: 100%

.grid-item-content
  align-items: flex-start
  bottom: 0
  display: flex
  flex-direction: column
  height: 100%
  justify-content: flex-end;
  padding: 15px
  position: absolute



.grid-item-text
  color: white
  font-size: 1.5em

.grid-item-date
  color: inherit
  margin-top: 10px
  font-weight: bold

.grid-item-button
  border: 1px solid white
  color: white
  margin-top: 10px
  padding: .4em
