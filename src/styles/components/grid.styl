.articulos
  height: 400px
  padding: 0 15px
  width: 100%

.grid
  max-width: 100%
  overflow: hidden

/* clearfix */
.grid:after
  clear: both
  content: ''
  display: block


/* ---- grid-item ---- */

.grid-sizer,
.grid-item
  background: $color-primary
  width: 50%

  @media screen and (min-width: 601px)
    width: 25%

  @media screen and (min-width: 1200px)
    width: 20%


.grid-item
  border-bottom: 7px solid $color-primary
  color: #333
  float: left
  height: 150px

.grid-item--height2
  color: $color-primary
  height: 200px

.grid-item--height3
  color: $color-primary
  height: 260px


.grid-item-img
  width: 100%
  height: 100%

.grid-item-content
  align-items: flex-start
  bottom: 0
  display: flex
  font-size: .9em
  flex-direction: column
  height: 100%
  justify-content: flex-end;
  padding: 15px
  position: absolute
  width: 80%

  @media screen and (min-width: 768px)
      font-size: .7em

  @media screen and (min-width: 1024px)
    font-size: 1em


.grid-item-text
  color: white
  font-weight: bold;

.grid-item-date
  color: inherit
  margin-top: 10px
  font-weight: bold

.grid-item-button
  border: 1px solid white
  color: white
  padding: .5em 1.4em
  display: flex
  align-items: center
  justify-content: center
  margin: 5px 0
