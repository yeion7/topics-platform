.options
  display: flex
  flex-direction: column
  padding: 0 15px

  @media screen and (min-width: 769px)
    flex-direction: row
    justify-content: space-between;

  &-form
    display: flex

    @media screen and (min-width: 769px)
      width: 50%

  &-text
    background: #444
    color: white
    flex: none
    font-weight: bold
    padding: 1em .5em

  &-input
    background: #ccc
    border: 0
    flex: auto
    width: 20%
    font-size: 1em
    padding: 0 8px

  &-button
    background: $color-primary
    border: 0
    color: white
    cursor: pointer
    flex none
    font-size: 1.2em
    padding: .6em .7em

  &-order
    align-items: center
    display: flex
    justify-content: space-between;
    width: 100%

    @media screen and (min-width: 769px)
      width: 50%
      justify-content: flex-end

  &-select
    cursor: pointer
    font-weight: bold
    padding: 1em .2em

    @media screen and (min-width: 769px)
      padding: .3em 1em

  &-title
    align-items: center
    display: flex

  &-name
  &-section
    font-size: 1.3em
    padding: .8em .5em

  &-name
    background: $color-primary
    color: white
    font-weight: bold

  &-section
    background: #ddd
    padding-right: 2em

.active
  background: $color-primary
  color: white
